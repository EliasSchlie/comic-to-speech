FROM python:3.11-bookworm

WORKDIR /app

# Install system dependencies and build tools (with retries for hash mismatches)
RUN apt-get update && \
    for i in 1 2 3; do \
        apt-get install -y --no-install-recommends \
        libglib2.0-0 \
        gcc \
        g++ \
        make && break || sleep 5; \
    done && \
    rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY interface_server.py .
COPY config.py .
COPY comic_reader_fixed.py .
COPY llm_narrator.py .
COPY tasks.py .

# Copy translation module (needed for task definitions)
COPY ocr_comic_to_text/ ./ocr_comic_to_text/

# Create directories
RUN mkdir -p audio_files temp_images

# Set PYTHONPATH to ensure tasks module can be imported
ENV PYTHONPATH=/app:$PYTHONPATH

# Expose port
EXPOSE 5001

# Run interface server
CMD ["python", "interface_server.py"]
